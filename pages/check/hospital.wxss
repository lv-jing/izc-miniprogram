.search_box .input_box {
    height: 60rpx;
    border-radius: 50rpx;
    background: #fff;
    color: #999;
    padding: 0 16rpx;
    box-shadow: 0px 1px 10px 0px rgba(3, 121, 255, 10);
}

.hospital_list .item {
    padding: 20rpx;
    background: #fff;
    border-radius: 16rpx;
    margin-bottom: 30rpx;
    box-shadow: 0px 6px 30px 3px rgba(0, 0, 0, 0.1);
}

.hospital_list .item .img_box image {
    width: 200rpx;
    height: 150rpx;
    border-radius: 6rpx;
    margin-right: 26rpx;
}

.hospital_list .item .content .address {
    color: #BDBDBD;
    font-size: 22rpx;
    margin: 10rpx 0;
}

.hospital_list .item .content .address .addressText {
    max-width: calc(100% - 60rpx);
}

.hospital_list .item .content .address .gap {
    width: 120rpx;
    text-align: right;
}


.hospital_list .item .content .address view image {
    width: 30rpx;
    height: 30rpx;
}
.not-data-cont {
    text-align: center;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    margin: auto;
    width: 500rpx;
    height: 600rpx;
}

.not-data-cont image {
    width: 360rpx;
    height: 360rpx;
}