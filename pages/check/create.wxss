.box {
    clear: both;
    overflow: hidden;
}

.hospital_box .item {
    padding: 20rpx;
    background: #fff;
    border-radius: 16rpx;
    margin-bottom: 30rpx;
    box-shadow: 0px 6px 30px 3px rgba(0, 0, 0, 0.1);
}

.hospital_box .item .img_box image {
    width: 200rpx;
    height: 150rpx;
    border-radius: 6rpx;
    margin-right: 26rpx;
}

.hospital_box .item .content .address {
    color: #BDBDBD;
    font-size: 22rpx;
    margin: 10rpx 0;
}

.hospital_box .item .content .address view image {
    width: 30rpx;
    height: 30rpx;
}

.h2 {
    margin-bottom: 16rpx;
}

.con {
    margin-bottom: 16rpx;
    /* clear: both; */
}

.date {
    flex-wrap: wrap;
    margin-right: -20rpx;
    display: flex;
}

.date .item {
    border-radius: 12rpx;
    background-color: #F4F4F4;
    color: #101010;
    font-size: 22rpx;
    text-align: center;
    margin-right: 20rpx;
    margin-bottom: 16rpx;
    padding: 16rpx 8rpx;
    width: calc(50% - 20rpx);
    /* float: left; */
    border: 2rpx solid #F4F4F4;
    box-sizing: border-box;
}

.date view.on {
    border: 2rpx solid #30AF65;
}

.date view .image {
    width: 30rpx;
    min-width: 30rpx;
    height: 30rpx;
    max-height: 30rpx;
}

.date view .week {
    margin: 0 16rpx 0 8rpx;
}
.time .item {
    width: calc(33% - 20rpx);
}
