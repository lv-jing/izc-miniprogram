.header {
  height: 300rpx;
  margin-bottom: 300rpx;
}

.header .img image {
  width: 80%;
  margin: 50rpx auto;
}

.white_box {
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0px 6px 30px 3px rgba(0, 0, 0, 0.1);
  margin-bottom: -80rpx;
  line-height: 2;
}

.step_box .con {
  margin-bottom: 16rpx;
}

.step_box .h2 {
  margin-bottom: 20rpx;
}

.step_box .h2 .num {
  border-radius: 30rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #30AF65;
  color: #fff;
  text-align: center;
  margin-right: 8rpx;
}

.step_1 .img image {
  width: 200rpx;
}

.step_3 .item {
  margin-bottom: 8rpx;
  color: #999;
}

.step_3 .item .img image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 16rpx;
}

.step_2 video {
  width: 100%;
}